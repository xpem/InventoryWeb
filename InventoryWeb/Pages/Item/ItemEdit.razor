            {
                Name = Item.Name.Trim(),
                AcquisitionDate = new DateTime(Item.AcquisitionDate.Year, Item.AcquisitionDate.Month, Item.AcquisitionDate.Day).Date,
                AcquisitionType = new AcquisitionType() { Id = SelectedAcquisitionTypeId },
